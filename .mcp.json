{
	"mcpServers": {
		"claude-flow": {
			"type": "stdio",
			"command": "npx",
			"args": [
				"claude-flow@alpha",
				"mcp",
				"start"
			]
		},
		"ruv-swarm": {
			"type": "stdio",
			"command": "npx",
			"args": [
				"ruv-swarm@latest",
				"mcp",
				"start"
			]
		},
		"taskmaster-ai": {
			"type": "stdio",
			"command": "npx",
			"args": [
				"-y",
				"--package=task-master-ai",
				"task-master-ai"
			]
		},
		"neo4j-lapack": {
			"type": "stdio",
			"command": "uvx",
			"args": ["mcp-neo4j-cypher@0.3.0"],
			"env": {
				"NEO4J_URI": "bolt://localhost:7687",
				"NEO4J_USERNAME": "",
				"NEO4J_PASSWORD": "",
				"NEO4J_DATABASE": "neo4j"
			}
		},
		"github": {
			"type": "stdio",
			"command": "npx",
			"args": [
				"@modelcontextprotocol/server-github"
			]
		},
        "mcpServers": {
            "nixos": {
            "command": "nix",
                "args": ["run", "github:utensils/mcp-nixos", "--"]
            }
        }
	}
}
